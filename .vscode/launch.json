  "version": "0.2.0",
  "configurations": [
      {
        "name": "Debug (localhost:2345)",
        "type": "go",
        "request": "attach",
        "mode": "remote",
        "port": 2345,
        "host": "localhost",
        "substitutePath": [
          {
            "from": "${workspaceFolder}",
            "to": "/devspace",
          },
        ],
        "showLog": true,
        "trace": "verbose", // use for debugging problems with delve (breakpoints not working, etc.)
      },
  ]
}